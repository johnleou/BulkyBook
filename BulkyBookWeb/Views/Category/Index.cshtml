@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br/>
    <br />

<table class="table table-bordered table-stripped" style="width:100%">
    <thead>
        <tr>
            <th>Category Id</th>
            <th>Category Name</th>
            <th>Category Display Order</th>
            <th>Category Date of Creation</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
        <tr>
            <td style="width:20%">@obj.Id</td>
            <td style="width:20%">@obj.Name</td>
            <td style="width:20%">@obj.DisplayOrder</td>
            <td style="width:20%">@obj.CreateDateTime</td>
            <td style="width:20%">
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square">Edit</i></a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
</div>